<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Music Preferences"
        android:id="@+id/tvMessage"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/causesSpinner"
        android:layout_below="@+id/tvMessage"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvArtistOne"
        android:layout_below="@+id/causesSpinner"
        android:layout_marginTop="20dp"
        android:text = "Select Artist One"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/artistOneSpinner"
        android:layout_below="@+id/causesSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvArtistTwo"
        android:layout_below="@+id/tvArtistOne"
        android:layout_marginTop="20dp"
        android:text="Select Artist Two"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/artistTwoSpinner"
        android:layout_below="@+id/artistOneSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvArtistThree"
        android:layout_below="@+id/tvArtistTwo"
        android:layout_marginTop="20dp"
        android:text="Select Artist Three"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/artistThreeSpinner"
        android:layout_below="@+id/artistTwoSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Memes Preferences"
        android:id="@+id/tvMessage2"
        android:layout_below="@+id/artistThreeSpinner"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvGenreOne"
        android:layout_below="@+id/tvMessage2"
        android:layout_marginTop="20dp"
        android:text = "Select Genre One"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/genreOneSpinner"
        android:layout_below="@+id/tvMessage2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvGenreTwo"
        android:layout_below="@+id/tvGenreOne"
        android:layout_marginTop="20dp"
        android:text="Select Genre Two"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/genreTwoSpinner"
        android:layout_below="@+id/tvGenreOne"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tvGenreThree"
        android:layout_below="@id/tvGenreTwo"
        android:layout_marginTop="20dp"
        android:text="Select Genre Three"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/genreThreeSpinner"
        android:layout_below="@+id/tvGenreTwo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnUpdate"
        android:layout_below="@+id/tvGenreThree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Update Preferences"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:background="@android:color/holo_blue_light"
        />

</RelativeLayout>